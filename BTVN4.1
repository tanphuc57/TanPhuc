def btvn(text, k):
    result = ""
    # Duyệt qua từng ký tự trong văn bản
    for char in text:
        # Xử lý chữ cái viết hoa
        if char.isupper():
            # Chuyển đổi ký tự thành số (A=0, B=1, ...)
            char_code = ord(char) - ord('A')
            # Dịch chuyển và lấy phần dư để vòng lại bảng chữ cái
            shifted_code = (char_code + k) % 26
            # Chuyển đổi lại thành ký tự
            shifted_char = chr(shifted_code + ord('A'))
            result += shifted_char
        # Xử lý chữ cái viết thường
        elif char.islower():
            char_code = ord(char) - ord('a')
            shifted_code = (char_code + k) % 26
            shifted_char = chr(shifted_code + ord('a'))
            result += shifted_char
        # Giữ nguyên các ký tự không phải là chữ cái (số, khoảng trắng,...)
        else:
            result += char
    return result

# Thông tin của bạn
STT = 3
vanbangoc = "NguyenCongTanPhuc"

# Mã hóa văn bản
vanbanmahoa = btvn(vanbangoc, STT)

print(f"Khóa dịch chuyển (k) = {STT}")
print(f"Văn bản gốc  = {vanbangoc}")
print(f"Văn bản đã mã hóa = {vanbanmahoa}")
